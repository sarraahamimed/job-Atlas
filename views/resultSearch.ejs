<h1 class="pb-4">Resultats de la recherche</h1>

<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
    <% if(emploi != ''){%>
        <% emploi.forEach(function(emploi, index){ %>
            <a href="/emploi/<%= emploi._id %>" class="col text-center category__link">
                <div class="pt-1"><%=<emploi.nom %></div>
                    <div class="pt-2"><%=<emploi.description%></div>
            </a>
       <% }) %>
    <%} else {%>
        <p>No items found.</p>
   <% }%>

</div>